def save_txt_to_pcd(txt_file_path, pcd_file_path):
    # 读取TXT文件
    with open(txt_file_path, 'r') as txt_file:
        lines = txt_file.readlines()

    # 创建PCD文件头部
    header = """# .PCD v.7 - Point Cloud Data file format
VERSION .7
FIELDS x y z intensity
SIZE 4 4 4 4
TYPE F F F F
COUNT 1 1 1 1
WIDTH {}
HEIGHT 1
VIEWPOINT 0 0 0 1 0 0 0
POINTS {}
DATA ascii
""".format(len(lines), len(lines))

    # 将头部和点云数据写入PCD文件
    with open(pcd_file_path, 'w') as pcd_file:
        pcd_file.write(header)
        for line in lines:
            # 直接写入每行数据，这里假设每行的格式已经是 x y z intensity
            pcd_file.write(line)

# 指定TXT文件路径和PCD文件保存路径
txt_file_path = 'C:/Users/xxxx/Desktop/1.txt'  # 替换为你的输入文件路径
pcd_file_path = 'C:/Users/xxxx/Desktop/1.pcd'  # 替换为你想保存的输出文件路径

# 调用函数
save_txt_to_pcd(txt_file_path, pcd_file_path)
